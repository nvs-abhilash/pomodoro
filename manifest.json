{
    "manifest_version": 3,
    "name": "Zen Pomodoro",
    "version": "1.0",
    "description": "A pomodoro timer that helps you stay focused and productive with focus music.",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "images/demure_pomodoro_icon_16x16.png",
        "32": "images/demure_pomodoro_icon_32x32.png",
        "48": "images/demure_pomodoro_icon_48x48.png",
        "128": "images/demure_pomodoro_icon_128x128.png",
        "256": "images/demure_pomodoro_icon_256x256.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["alarms", "storage", "notifications", "tabs"],
    "options_page": "settings/settings.html",
    "web_accessible_resources": [{
        "resources": ["audio_player.html"],
        "matches": ["<all_urls>"]
    }]
}
